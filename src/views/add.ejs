<!DOCTYPE html>
<html>
 
    <%- include('partials/head', {title: 'Inicio'}) %>

    <body>
    
    <%- include('partials/header') %>
    <main>
 
        <div class="errores">
           
            <ul></ul>

        </div>


        <form action="/products/add" id="agregarProducto" name="formRegistrar" method="post" enctype="multipart/form-data">

            <section id="formulario"> 

                <h2 class="block"> AGREGAR PRODUCTO</h2>

                <div class="columna col100">
                    <input type="text" id="nombre" name="nombre" placeholder="nombre producto (*)" title="nombre producto" />
                </div>
                <div class="columna col100">
                    <textarea id="descripcion" name="descripcion"></textarea>
                </div>
                <div class="columna">
                    <input type="number" id="precio"   name="precio" placeholder="valor en pesos (*)" title="valor del producto" />
                </div>

                
                <div class="columna">
                    <input type="number"   name="descuento"  placeholder="descuento (*)" title="Descuento" />
                </div>

                <%  alltalles.forEach( function( tt ){ %>

                <div class="columna">
                    <input type="number"  id = "cantidad" name="cantidad[<%= tt.idTalle %>]" placeholder="cantidad talle <%= tt.talle %> (*)" title="cantidad de producto" />
                </div>

                <% }) %>

                <div class="columna"> 
                    <select name="person" >
                        <option value="">tipos de personas</option>
                        <%  alltp.forEach( function( tp ){ %>
                            <option value="<%= tp.idtipo %>">
                             <%= tp.persona %>
                         </option>
                             <% }) %>
                    </select>
                </div>

                <div class="columna">
                    <select name="categoria" >
                        <option value="">Categorías productos</option>
                        <%  allcats.forEach( function( cat ){ %>
                            <option value="<%= cat.idcategoria %>">
                             <%= cat.categoria %>
                         </option>
                             <% }) %>
                    </select>
                </div>

                <div class="columna">
                    <input type="file"  name="foto"  />
                </div>

                <div class="columna-100">
                    <input type="submit" value="Enviar" title="¿Listo?" /> 

                    <input type="reset" value="Cancelar" />
                </div>

            </section>
        </form>

        <script src="/js/scriptAdd.js" type="text/javascript">
        </script>

    </main>

    <%- include('partials/footer') %>

</body>

</html>