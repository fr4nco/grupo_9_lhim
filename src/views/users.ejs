<!DOCTYPE html>
<html lang="es">

	<%- include('partials/head', {title: 'Inicio'}) %>

	<body>
	
	<%- include('partials/header') %>
	<main>


	
			<section id="destacados">
				<h2 class="block">usuarios</h2>
	
				<% users.forEach( function( user ){ %>
				
                    <article>
						<div class="artImg">
							<a href="/users/profile/<%= user.id; %>">
								<img src="/images/users/<%= user.avatar; %>" />
							</div>
							<div class="artTitulo">
								<strong>
									Nombre: <%= user.firstname; %>
								</strong>
							</div>
							<div class="artPrecio">
								<p>
								Apellido:	<%= user.lastname; %>
								</p>
                                <p>
									<%= user.email; %>
								</p>
                                <p>
									<%= user.birthdate; %>
								</p>
                                <p>
									<%= user.gender; %>
								</p>
							</div>
							</a>
					</article>
		
					<% }) %>
	
			</section>
		
	
	</main>

	<%- include('partials/footer') %>
</body>	
</html>